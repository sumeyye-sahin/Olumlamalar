<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreathingIntroActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/purple">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="4-7-8 Nefes egzersizi neden önemlidir?"
        ></TextView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:background="@drawable/boldblack"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tvBreathingIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:padding="20dp"
            android:text="@string/breathingIntro"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </ScrollView>

    <Button
        android:id="@+id/btnContinue"
        android:background="@drawable/buttonmain"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Nefes Egzersizine 2 adım kaldı"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
</LinearLayout>
